{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "congif/*": ["congif/*"],
      "entities/*": ["entities/*"],
      "middlewares/*": ["middlewares/*"],
      "models/*": ["models/*"],
      "services/*": ["services/*"],
      "shared/*": ["shared/*"]
    }
  },
  "lib": ["es2015"],
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "src/**/*.test.ts"]
}
